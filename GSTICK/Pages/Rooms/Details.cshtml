@page
@model GSTICK.Pages.Rooms.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.PlayerNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.PlayerNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Images)
        </dt>
        <dd class="col-sm-10">
            @foreach (var image in Model.Room.Images.Where(i => i.IsHead == null))
	        {
            <img src="@("~/images/"+image.Name)" alt="@(image.Name)" asp-append-version="true" width="100px" height="100px" />
	        }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Room.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
